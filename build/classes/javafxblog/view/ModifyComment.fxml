<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="box" prefHeight="162.0" prefWidth="486.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxblog.control.ModifyCommentController">
   <children>
      <VBox prefHeight="155.0" prefWidth="634.0">
         <children>
            <Label fx:id="username" text="User name" textFill="#3145e1">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tf_comment" accessibleRole="TEXT_AREA" prefHeight="49.0" prefWidth="426.0">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="20.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </TextField>
            <HBox prefHeight="43.0" prefWidth="634.0">
               <children>
                  <Label fx:id="id_comment" text="id" visible="false">
                     <HBox.margin>
                        <Insets left="50.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btn_Modify" mnemonicParsing="false" onAction="#Modify" prefHeight="25.0" prefWidth="71.0" text="Modify">
                     <HBox.margin>
                        <Insets left="250.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
