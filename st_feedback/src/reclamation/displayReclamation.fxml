<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="reclamation.DisplayReclamationController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="TOP_LEFT" text="Reclamations">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                           <stops>
                              <Stop color="#1e36cde5" />
                              <Stop color="#4059a9" offset="1.0" />
                           </stops>
                        </LinearGradient>
                     </textFill>
                     <HBox.margin>
                        <Insets left="50.0" top="20.0" />
                     </HBox.margin>
                  </Label>
                  <JFXButton fx:id="sendrec" onAction="#SendRec" prefHeight="25.0" prefWidth="124.0" style="-fx-border-radius: 10px; -fx-border-color: #4059a9;" text="Send Reclamation" textFill="#4059a9">
                     <HBox.margin>
                        <Insets bottom="10.0" left="280.0" top="70.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
         </top>
         <center>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="reclamationLayout" prefHeight="628.0" prefWidth="585.0" spacing="20.0">
                     <padding>
                        <Insets left="20.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
